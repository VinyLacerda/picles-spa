import { useQuery } from "@tanstack/react-query"
import { getPets } from "../service/pets/getPets"
import { GetPetsRequest, GetPetsResponse } from "../interfaces/pets"

interface IUsePetList {
    data?: GetPetsResponse
    isLoading: boolean
}

export function usePetList(params): IUsePetList {
    const { data, isLoading } = useQuery({
        queryKey: ['get-pets', params],
        queryFn: () => getPets(params),
    })
    return { data, isLoading }
}